<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
<body ng-app="app">
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("My tasks", "Index", "Task")</li>
                        <li>@Html.ActionLink("Task categories", "Index", "Category")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="~/ScriptsLib/angular.js"></script>

    <script src="~/ScriptsLib/angular-resource.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/mvTask.js"></script>
    <script src="~/Scripts/mvTaskListCtrl.js"></script>
<script src="~/Scripts/mvSubTask.js"></script>
    <script src="~/Scripts/mvCategory.js"></script>
    <script src="~/Scripts/mvCategoriesCtrl.js"></script>

</body>
</html>
